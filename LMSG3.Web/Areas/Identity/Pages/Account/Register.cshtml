@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FName" class="control-label"></label>
                <input asp-for="Input.FName" class="form-control" />
                <span asp-validation-for="Input.FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LName" class="control-label"></label>
                <input asp-for="Input.LName" class="form-control" />
                <span asp-validation-for="Input.LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>User Role</label>
                @Html.DropDownList("drpUserRole", new List<SelectListItem>{
                                                                           new SelectListItem{ Text="Teacher", Value = "Teacher" },
                                                                           new SelectListItem{ Text="Student", Value = "Student" } },
                                                                           "Select User Role", new { @class = "form-control", @onchange = "FillCourse()" })
                <span asp-validation-for="@Html.ValidationMessageFor(m => m.User, "", new { @class = "text-danger" })" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>User Role</label>
                @Html.DropDownList("drpCourses", new List<SelectListItem>{ViewBag.Courses})

                <span asp-validation-for="@Html.ValidationMessageFor(m => m.User, "", new { @class = "text-danger" })" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {

    <script>
        function FillCourse() {

                              }
    </script>
    <partial name="_ValidationScriptsPartial" />

}
