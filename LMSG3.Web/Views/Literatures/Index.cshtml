@inject LMSG3.Web.Services.ILiteratureSelectService service

@{
    ViewData["Title"] = "Literatures";
}

<h1>Literatures</h1>

<form asp-action="Index" method="Get">
    <div class=" row input-group mb-3">
        <div class="col-md-4">
            <input type="text" name="searchString" class="form-control" placeholder="Search literature..." aria-describedby="button-addon2">
        </div>
        <div class="col-md-4">
            <select asp-items="@await service.GetLevelAsync()" class="form-control" name="currentFilter">
                <option selected="selected" value="">Please select</option>
            </select>
        </div>
        <div class="col-md-4 input-group-append">
            <input type="submit" value="Filter" id="button-addon2" class="btn btn-secondary col-lg-12" />
        </div>
    </div>
</form>
<partial name="LiteraturePartial" />
