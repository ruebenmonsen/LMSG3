@model LMSG3.Core.Models.Dtos.LiteratureDto
@inject LMSG3.Web.Services.ILiteratureSelectService service

@{
    ViewData["Title"] = "Edit";
}
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/bootstrap-form-validation.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
<h2>Edit literature</h2>

<hr />
<div class="clearfix">
    <form asp-action="EditLiterature" data-toggle="validator" novalidate="true">

        <div class="box" style="background-color:#fff">
            <p>Literature</p>
            <hr class="rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" required="required" data-error="Please enter a title." />
                <div class="help-block with-errors"></div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea class="form-control" asp-for="Description" rows="3" required="required" data-error="Please enter a description."></textarea>
                <div class="help-block with-errors"></div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label">Release date</label>
                <input asp-for="ReleaseDate" class="form-control" placeholder="YYYY-MM-DD" required="required" data-error="Please enter a valid date." />
                <div class="help-block with-errors"></div>
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubId" class="control-label">Subject</label>
                <select asp-items="@await service.GetLiteraturesSubjects()" asp-for="SubId" class="custom-select mr-sm-2" style="font-size:medium" name="SubId" required="required" data-error="Please select a subject.">
                </select>
                <div class="help-block with-errors"></div>
                <span asp-validation-for="SubId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LiteraLevelId" class="control-label">Level</label>
                <select asp-items="@await service.GetLiteratureLeves()" asp-for="LiteraLevelId" class="custom-select mr-sm-2" style="font-size:medium" name="LiteraLevelId" required="required" data-error="Please select a level.">
                </select>
                <div class="help-block with-errors"></div>
                <span asp-validation-for="LiteraLevelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LiteraTypeId" class="control-label">Type</label>
                <select asp-items="@await service.GetLiteraturesTypes()" asp-for="LiteraTypeId" class="custom-select mr-sm-2" style="font-size:medium" name="LiteraTypeId" required="required" data-error="Please select a type.">
                </select>
                <div class="help-block with-errors"></div>
                <span asp-validation-for="LiteraTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-secondary">Save</button>
            </div>
        </div>

        <div class="box">
            <p>Authors</p>
            <hr class="rounded">
            @foreach (var item in Model.Authors)
            {
                <div class="form-group">
                    <input type="hidden" asp-for="Id" value="@item.Id" name="authorId" />
                    <label class="control-label">First Name</label>
                    <input asp-for="@item." name="FirstName" class="form-control" value="@item.FirstName" required="required" data-error="Please enter a first name." />
                    <div class="help-block with-errors"></div>
                    <span asp-validation-for="@item.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Last tName</label>
                    <input asp-for="@item.LastName" name="LastName" value="@item.LastName" class="form-control" required="required" data-error="Please enter a last name." />
                    <div class="help-block with-errors"></div>
                    <span asp-validation-for="@item.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Date of birth</label>
                    <input asp-for="@item.DateOfBirth" name="DateOfBirth" class="form-control" required="required" data-error="Please enter valid date" />
                    <div class="help-block with-errors"></div>
                    <span asp-validation-for="@item.DateOfBirth" class="text-danger"></span>
                    <hr class="rounded">
                </div>
            }

        </div>
</form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<link href="~/css/literature.css" rel="stylesheet" />

