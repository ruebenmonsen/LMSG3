@inject LMSG3.Web.Services.IDocumentTypeSelectListService DocumentTypeListservice
@model LMSG3.Core.Models.ViewModels.DocumentUploadViewModel

<form method="post" asp-controller="Documents" asp-action="Upload" enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <div class="form-group">
        <input type="hidden" asp-for="Id" readonly />
        <input type="hidden" asp-for="EntityName" readonly />
        <h5 class="modal-title" id="documentModalLabel">@Model.Name</h5>
    </div>
    <div class="form-group">
        <label asp-for="DocumentName" class="control-label"></label>
        <input asp-for="DocumentName" class="form-control" />
        <span asp-validation-for="DocumentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DocumentTypeId" class="control-label"></label>
        <select asp-for="DocumentTypeId" asp-items="@await DocumentTypeListservice.GetDocumentTypeAsync()" class="form-control">
            <option value="">Please select</option>
        </select>
        <span asp-validation-for="DocumentTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SubmittedFile" class="control-label"></label>
        <input asp-for="SubmittedFile" type="file" class="form-control" />
        <span asp-validation-for="SubmittedFile" class="text-danger"></span>
    </div>


    <div class="modal-footer">
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Upload</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</form>