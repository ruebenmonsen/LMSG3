@inject LMSG3.Web.Services.IDocumentTypeSelectListService DocumentTypeListservice
@model LMSG3.Core.Models.Entities.Document

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Document</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadDate" class="control-label"></label>
                <input asp-for="UploadDate" class="form-control" disabled />
                <span asp-validation-for="UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentType" class="control-label"></label>
                <select asp-for="DocumentTypeId" asp-items="@await DocumentTypeListservice.GetDocumentTypeAsync()" class="form-control">
                    <option value="">Please select</option>
                </select>
                <span asp-validation-for="DocumentTypeId" class="text-danger"></span>
            </div>
            @if (@Model.CourseId != null)
            {
                <div class="form-group">
                    <label asp-for="Course" class="control-label"></label>
                    <input asp-for="Course.Name" class="form-control" disabled />
                    <input asp-for="CourseId" class="form-control" hidden />
                </div>
            }
            @if (@Model.ModuleId != null)
            {
                <div class="form-group">
                    <label asp-for="Module" class="control-label"></label>
                    <input asp-for="Module.Name" class="form-control" disabled />
                    <input asp-for="ModuleId" class="form-control" hidden />
                </div>
            }
            @if (@Model.ActivityId != null)
            {
                <div class="form-group">
                    <label asp-for="Activity" class="control-label"></label>
                    <input asp-for="Activity.Name" class="form-control" disabled />
                    <input asp-for="ActivityId" class="form-control" hidden />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Courses">Back to List</a>
</div>

