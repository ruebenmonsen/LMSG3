@model  IEnumerable<LMSG3.Core.Models.ViewModels.StudentAssignmentViewModel>

<form class="">
    <h4 class=""> _____Student assignments_____</h4>

    <table data-toggle="table"
           data-classes="table table-hover table-condensed table-striped"
           data-striped="true"
           data-sort-order="desc"
           data-sort-name="UploadDate"
           data-pagination="true"
           data-page-list="[5,10,20,ALL]"
           data-page-size="20">
        <thead class="thead-dark">
            <tr>
                <th class="col-3" data-sortable="true">
                    @Html.DisplayNameFor(model => model.AssignmentName)
                </th>
                <th class="col-3" data-sortable="true">
                    @Html.DisplayNameFor(model => model.StudentName)
                </th>
                <th class="col-3" data-sortable="true">
                    @Html.DisplayNameFor(model => model.UploadDate)
                </th>
                <th class="col-3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssignmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UploadDate)
                    </td>
                    <td>
                        <a class="btn-sm btn-outline-primary" asp-controller="Documents" asp-action="Download" asp-route-path="@item.Path"><i class="bi bi-download"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
</form>