@model LMSG3.Core.Models.ViewModels.StudentTimeTableViewModel

<div class="row">
    <div class="col-6">
        <h4>TimeTable</h4>
            <ul class="list-group overflow-auto assignment-list">
                @foreach (var a in Model.Activities)
                {
                    <li class="list-group-item justify-content-between">
                        <div class="row">
                            <div class="col-6">
                                <div>@Html.DisplayFor(modelA => a.Name)</div>
                                <div class=""><p class="small mb-0">@Html.DisplayFor(_ => a.StartDate) <br /> @Html.DisplayFor(_ => a.EndDate)</p></div>
                            </div>
                            <div class="col-3">
                            </div>
                            <div class="col-3">
                                @if (a.HasDocument)
                                {
                                    <a class="btn btn-outline-primary btn-sm" onclick=""><i class="bi bi-download"></i></a>
                                }
                            </div>
                        </div>
                    </li>
                }
            </ul>
    </div>
</div>