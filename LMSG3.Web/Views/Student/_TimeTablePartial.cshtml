<div class="d-flex flex-row overflow-auto justify-content-center align-items-center bg-dark" style="height: 10%">
    <div class="" style="overflow: hidden; display: block; height: 90%;">
        <span>Current Module: @Model.CurrentModuleName</span>
    </div>
    <div class="" style="overflow: hidden; display: block; height: 90%;">
        <button type="button" class="btn-sm btn-outline-secondary @(Model.HasWeekPrevious ? "btn-success" : "btn-danger")" id="button1" onclick="@(Model.HasWeekPrevious ? "loadPTT(" + @Model.Year + ", " + @Model.Week + ", - 1)" : "")"><i class="bi bi-chevron-left"></i></button>
    </div>
    <div class="badge-pill bg-danger align-items-center" style="overflow: hidden; display: block; height: 90%;">
        <span>Week @Model.Week</span>
    </div>
    <div class="" style="overflow: hidden; display: block; height: 90%;">
        <button type="button" id="button1" class="btn-sm btn-outline-secondary @(Model.HasWeekNext ? "btn-success" : "btn-danger")" onclick="@(Model.HasWeekNext ? "loadPTT(" + @Model.Year + ", " + @Model.Week + ", + 1)" : "")"><i class="bi bi-chevron-right"></i></button>
    </div>
</div>
<div class="d-flex justify-content-around bg-secondary" style="height: 90%">
    <div class="h-100" style="width: 14%">
        <div class="" style="overflow: hidden; display: block; height: 10%;">Time</div>
        @{var times = new List<string> { "08:00-09:00", "09:00-10:00", "10:00-11:00", "11:00-12:00", "12:00-13:00", "13:00-14:00", "14:00-15:00", "15:00-16:00", "16:00-17:00", "17:00-18:00", "18:00-19:00" };}
        @foreach (var t in times)
        {
            <div class="badge bg-primary w-100" style="overflow: hidden; display: block; height: 10%;" data-tooltip="English Literature">
                <div>@Html.DisplayFor(modelA => t)</div>
            </div>
        }
    </div>
    @{var days = new List<DayOfWeek> { DayOfWeek.Monday, DayOfWeek.Tuesday, DayOfWeek.Wednesday, DayOfWeek.Thursday, DayOfWeek.Friday };}
    @foreach (var day in days)
    {
        @if (Model.Activities.ContainsKey(day))
        {
            <div class="h-100" style="width: 16%">
                <div class="" style="overflow: hidden; display: block; height: 10%;">@day.ToString()</div>
                @foreach (var a in Model.Activities[day])
                {
                    <div class="badge bg-primary w-100" style="overflow: hidden; display: block; height: 10%" data-tooltip="English Literature">
                        <div>@Html.DisplayFor(modelA => a.ActivityTypeId) : @Html.DisplayFor(modelA => a.Name)</div>
                        <div>@a.StartDate.ToString("t") - @a.EndDate.ToString("t")</div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="h-100" style="width: 16%">
                <div class="" style="overflow: hidden; display: block; height: 10%;">@day.ToString()</div>
                <div class="bg-danger" style="overflow: hidden; display: block; height: 90%;"></div>
            </div>
        }
    }
</div>