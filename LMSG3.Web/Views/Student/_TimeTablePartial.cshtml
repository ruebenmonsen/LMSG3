@model LMSG3.Core.Models.ViewModels.StudentTimeTableViewModel

<div class="row">
    <div class="col-6">
        <h4>TimeTable</h4>
        <button type="button" id="button1" onclick="@(Model.HasWeekPrevious ? "loadPTT(" + @Model.Year + ", " + @Model.Week + ", - 1)" : "")">@Model.WeekPrevious</button>
        @Model.Week
        <button type="button" id="button1" class="@(Model.HasWeekNext ? "btn-danger" : "btn-success")" onclick="loadPTT(@Model.Year, @Model.Week, + 1)">@Model.WeekNext</button>
        <ul class="list-group overflow-auto assignment-list">
            @if (Model.Activities.ContainsKey(DayOfWeek.Monday))
            {
                @foreach (var a in Model.Activities[DayOfWeek.Monday])
                {
                    <li class="list-group-item justify-content-between">
                        <div class="row">
                            <div class="col-6">
                                <div>@Html.DisplayFor(modelA => a.ActivityTypeId) : @Html.DisplayFor(modelA => a.Name)</div>
                                <div class="@(a.InCurrentModule ? "bg-success" : "")"><p class="small mb-0">@Html.DisplayFor(_ => a.StartDate) <br /> @Html.DisplayFor(_ => a.EndDate)</p></div>
                            </div>
                            <div class="col-3">
                            </div>
                            <div class="col-3">
                                @if (a.HasDocument)
                                {
                                    <a class="btn btn-outline-primary btn-sm" onclick=""><i class="bi bi-download"></i></a>
                                }
                            </div>
                        </div>
                    </li>
                }
            }
        </ul>
    </div>
</div>