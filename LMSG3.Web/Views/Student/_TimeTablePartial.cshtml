        font-size: 12px;
        text-align: center;
        line-height: 10vh;
    }

    .tt-act {
        width: 100%;
        height: 15vh; /*90min*/
        line-height: 15vh;
        background-color: magenta;
        font-size: 2vw;
        font-weight: 300;
        padding-left: 10px;
    }

        .tt-act.short {
            height: 7.5vh;
            line-height: 7.5vh;
        }
