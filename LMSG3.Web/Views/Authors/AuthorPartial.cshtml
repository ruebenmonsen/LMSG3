@model IEnumerable<LMSG3.Core.Models.Dtos.LiteratureAuthorDto>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" class="link-secondary" asp-route-sortOrder="@ViewData["FullNameSortParm"]">Name</a>
            </th>
            <th>
                <a asp-action="Index" class="link-secondary" asp-route-sortOrder="@ViewData["AgeSortParm"]">Age</a>
            </th>
            <th>
                <a asp-action="Index" class="link-secondary" asp-route-sortOrder="@ViewData["CountLiteraturesSortParm"]">Number of works</a>
            </th>
            <th>
                <a asp-action="Index" class="link-secondary" asp-route-sortOrder="@ViewData["LatestWorkSortParm"]">Latest work</a>
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" title="Click to view literature details" class="link-secondary" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.FullName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmoutWorks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LatestWork)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.LevelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LiteraTypeName)
                    </td>*@
                @*<td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>

